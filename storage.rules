rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /courses/{courseId}/{allPaths=**} {
      // Admins can write
      allow write: if request.auth != null && request.auth.token.role in ['superadmin', 'admin', 'content_manager'];
      // Public read (or restrict to enrolled)
      allow read: if true; 
    }
  }
}
