rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Course thumbnails and resources
    match /courses/{allPaths=**} {
      // Admins can write
      allow write: if request.auth != null;
      // Public read
      allow read: if true; 
    }

    // Batch thumbnails
    match /batches/{allPaths=**} {
      allow write: if request.auth != null;
      allow read: if true;
    }

    // Feed thumbnails
    match /feed/{allPaths=**} {
      allow write: if request.auth != null;
      allow read: if true;
    }

    // User uploads (profile pics, etc)
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
